@page "/counter"
@using Core.Queries;
@using Core.Commands;
@inject IMediator  _mediator;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    protected override async Task OnInitAsync()
    {
        currentCount = await _mediator.Send(new GetClickCount());
    }

    async Task IncrementCount()
    {
        currentCount = await _mediator.Send(new IncrementCounter());
    }
}
